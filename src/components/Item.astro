---
export  interface Props {
    id: number
    title: string
    description: string
    price: number
    thumbnail: string
    
}
const {
    id,
    title,
    description,
    price,
    thumbnail
} = Astro.props
---

<a class=" flex flex-col justify-center p-3" href={`/${id}`}>

    <img class="" src={thumbnail} alt={title}>
    <p class=" grid place-content-center">{title}</p>
	<p class=" text-sm">{description}</p>
	<p>{price}</p>

</a>
